<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="417dp"
    android:layout_marginLeft="11dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/fragment_list_item_iv"
        android:layout_width="270dp"
        android:layout_height="297dp"
        android:src="@mipmap/test" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <!-- TODO 测试文字 -->
        <TextView
            android:id="@+id/fragment_list_item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/test_fragment_list_item_brand"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fragment_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/test_fragment_list_item_price"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_list_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/test_fragment_list_item_city"
        android:textColor="#333"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/iv_black_line" />

    <TextView
        android:id="@+id/fragment_list_item_glasses_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/test_fragment_list_item_glasses_name"
        android:textColor="#000"
        android:textSize="15sp" />
</LinearLayout>
