<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_list_item_glasses_line"
    android:layout_width="281dp"
    android:layout_height="417dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/fragment_list_glassesitem_line_width"
        android:layout_height="match_parent"
        android:background="@color/fragment_list_glassesitem_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_list_item_iv"
            android:layout_width="@dimen/fragment_list_glassesitem_line_iv_width"
            android:layout_height="@dimen/fragment_list_glassesitem_line_iv_height"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_list_glassesitem_line_rl_marginleft"
            android:layout_marginTop="@dimen/fragment_list_glassesitem_line_rl_margintop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/fragment_all_item_textcolor"
                android:textSize="@dimen/textsizeoffifteen" />

            <TextView
                android:id="@+id/fragment_list_item_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fragment_list_glassesitem_line_rl_tvtwo_marginright"
                android:textColor="@color/fragment_all_item_textcolor"
                android:textSize="@dimen/textsizeoffifteen" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_list_glassesitem_line_rltwo_marginleft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_list_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fragment_all_item_texttwocolor"
                android:textSize="@dimen/textsizeoftwelf" />

            <TextView
                android:id="@+id/fragment_list_item_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fragment_list_glassesitem_line_rltwo_tvtwo_marginright"
                android:text="@string/test_fragment_list_item_price"
                android:textColor="@color/fragment_all_item_textcolor"
                android:textSize="@dimen/textsizeoffifteen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_list_item_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/fragment_list_item_discount_price"
                android:textColor="@color/fragment_all_item_textcolor"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_list_glassesitem_line_ivtwo_marginleft"
            android:layout_marginTop="@dimen/fragment_list_glassesitem_line_ivtwo_margintop"
            android:src="@mipmap/iv_black_line" />

        <TextView
            android:id="@+id/fragment_list_item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_list_glassesitem_line_two_marginleft"
            android:layout_marginTop="@dimen/fragment_list_glassesitem_line_two_margintop"
            android:textColor="@color/fragment_all_item_textcolor"
            android:textSize="@dimen/textsizeoffifteen" />
    </LinearLayout>


</LinearLayout>
