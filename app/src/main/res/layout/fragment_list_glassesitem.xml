<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_list_item_glasses_line"
    android:layout_width="281dp"
    android:layout_height="417dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_list_item_iv"
            android:layout_width="270dp"
            android:layout_height="297dp"
            android:scaleType="fitCenter"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <!-- TODO 测试文字 -->
            <TextView
                android:id="@+id/fragment_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_list_item_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"

                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <!-- TODO 测试文字 -->
            <TextView
                android:id="@+id/fragment_list_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#333"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fragment_list_item_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="@string/test_fragment_list_item_price"
                android:textColor="#000"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_list_item_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/fragment_list_item_discount_price"
                android:textColor="#000"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/iv_black_line" />

        <TextView
            android:id="@+id/fragment_list_item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"

            android:textColor="#000"
            android:textSize="15sp" />
    </LinearLayout>




</LinearLayout>
