<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_menu_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fragment_menu_line_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_autolinearlayout_height"
            android:orientation="vertical" />

        <ListView
            android:id="@+id/fragment_menu_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fragment_menu_back_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_autolinearlayoutnext_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_menu_tvfirst_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_menu_autolinearlayoutnext_tv_top"
                android:alpha="0.25"
                android:text="@string/fragment_menu_autolinearlayoutnext_tv_text"
                android:textColor="@color/fragment_menu_textcolor"
                android:textSize="@dimen/fragment_menu_autolinearlayout_tv_size" />

            <ImageView
                android:id="@+id/fragment_menu_first_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_menu_autolinearlayoutnext_iv_height"
                android:layout_marginTop="@dimen/fragment_menu_autolinearlayoutnext_iv_top"
                android:src="@mipmap/iv_line_of_title_bottom" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fragment_menu_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_autolinearlayoutthird_height"
            android:layout_marginTop="@dimen/fragment_menu_autolinearlayoutthird_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_menu_item_tvnext_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_menu_autolinearlayoutthird_tv_top"
                android:alpha="0.25"
                android:text="@string/fragment_menu_autolinearlayoutthird_tv_text"
                android:textColor="@color/fragment_menu_textcolor"
                android:textSize="@dimen/fragment_menu_autolinearlayout_tv_size" />

            <ImageView
                android:id="@+id/fragment_menu_next_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_menu_autolinearlayoutthird_iv_height"
                android:layout_marginTop="@dimen/fragment_menu_autolinearlayoutthird_iv_top"
                android:src="@mipmap/iv_line_of_title_bottom" />
        </com.zhy.autolayout.AutoLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
