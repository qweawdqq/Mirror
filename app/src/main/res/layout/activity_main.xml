<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityworks.MainActivity">

    <FrameLayout
        android:id="@+id/main_flt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"></FrameLayout>

    <ImageView
        android:id="@+id/main_iv_mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_flt_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/img_mirror" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_iv_mirror"
        android:layout_alignParentRight="true"
        android:paddingRight="24dp"
        android:text="登录"
        android:textColor="@android:color/white" />
</RelativeLayout>
