<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 上方点击标签 -->
    <LinearLayout
        android:id="@+id/fragment_all_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_list_click_marginLeft"
        android:layout_marginTop="@dimen/fragment_list_click_marginTop"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_all_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/test_fragment_list_title"
                android:textColor="#fff"
                android:textSize="@dimen/fragment_list_title_testsize" />

            <ImageView
                android:id="@+id/fragment_all_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_list_title_iv_marginLeft"
                android:src="@mipmap/iv_bottom_arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_list_title_line_marginTop"
            android:src="@mipmap/iv_line_of_title_bottom" />

        <!-- TODO 文字-->
        <TextView
            android:id="@+id/fragment_all_titleNest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_list_titleNest_marginTop"
            android:text="@string/test_fragment_list_titleNest"
            android:textColor="#fff"
            android:textSize="@dimen/fragment_list_titleNest_textSize" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_all_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_list_recyclerview_height"
        android:layout_marginLeft="@dimen/fragment_list_recyclerview_marginLeft"
        android:layout_marginTop="@dimen/fragment_list_recyclerview_marginTop"></android.support.v7.widget.RecyclerView>
</LinearLayout>

