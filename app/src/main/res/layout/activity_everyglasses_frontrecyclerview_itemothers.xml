<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/everyglasses_frontrecyclerview_itemother_marginTopLayout_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/everyglasses_frontrecyclerview_itemother_content_layout_margin"
        android:layout_marginRight="@dimen/everyglasses_frontrecyclerview_itemother_content_layout_margin"
        android:background="@color/everyglasses_frontrecyclerview_itemother_content_layout_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/everyglasses_frontrecyclerview_itemother_line_margin"
            android:layout_marginRight="@dimen/everyglasses_frontrecyclerview_itemother_line_margin"
            android:layout_marginTop="@dimen/everyglasses_frontrecyclerview_itemother_topline_marginTop"
            android:background="@mipmap/iv_line_of_title_bottom" />

        <TextView
            android:id="@+id/everyglasses_frontrecyclerview_itemother_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/everyglasses_frontrecyclerview_itemother_title_marginTop"
            android:gravity="center"
            android:textColor="@color/everyglasses_frontrecyclerview_itemother_title_textColor"
            android:textSize="@dimen/everyglasses_frontrecyclerview_itemother_title_textSize" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/everyglasses_frontrecyclerview_itemother_line_margin"
            android:layout_marginRight="@dimen/everyglasses_frontrecyclerview_itemother_line_margin"
            android:layout_marginTop="@dimen/everyglasses_frontrecyclerview_itemother_bottomline_marginTop"
            android:background="@mipmap/iv_line_of_title_bottom" />

        <TextView
            android:id="@+id/everyglasses_frontrecyclerview_itemother_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/everyglasses_frontrecyclerview_itemother_content_textview_margin"
            android:layout_marginRight="@dimen/everyglasses_frontrecyclerview_itemother_content_textview_margin"
            android:layout_marginTop="@dimen/everyglasses_frontrecyclerview_itemother_content_textview_margin"
            android:textColor="#fff"
            android:textSize="@dimen/everyglasses_frontrecyclerview_itemother_content_textview_textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/everyglasses_frontrecyclerview_itemother_contentMarginBottom_layout_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/everyglasses_frontrecyclerview_itemother_marginBottomLayout_height" />
</LinearLayout>
